{
    "packages": [
        "bundler",
        "ruby_3_1"
    ],
    "shell": {
        "init_hook": [
            "gem install jekyll --version \"~> 3.9.2\""
        ],
        "scripts": {
            "generate": [
                "cd myblog",
                "bundle update",
                "bundle lock",
                "bundle package",
                "rm -rf vendor"
            ],
            "serve": [
                "cd myblog",
                "bundler exec $GEM_HOME/bin/jekyll serve --trace"
            ]
        }
    },
    "nixpkgs": {
        "commit": "52e3e80afff4b16ccb7c52e9f0f5220552f03d04"
    }
}