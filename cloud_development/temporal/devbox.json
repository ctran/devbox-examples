{
    "packages": [
        "openssl_1_1",
        "openssl_1_1.dev",
        "clang",
        "temporalite",
        "temporal-cli",
        "python311",
        "poetry"
    ],
    "shell": {
        "init_hook": [
            "export GRPC_PYTHON_BUILD_SYSTEM_OPENSSL=true",
            "export GRPC_UNIVERSAL2_REPAIR=true",
            "export POETRY_CACHE_DIR=./.poetry-cache",
            "export NAMESPACE=default",
            "export CC=clang++",
            "echo \"Details on Temporalite at https://github.com/temporalio/temporalite\""
        ],
        "scripts": {
            "start-temporalite": "temporalite start --ephemeral --namespace $NAMESPACE --log-format=pretty --log-level=warn",
            "poetry-shell": "cd temporal_example/hello && poetry shell"
        }
    },
    "nixpkgs": {
        "commit": "52e3e80afff4b16ccb7c52e9f0f5220552f03d04"
    }
}